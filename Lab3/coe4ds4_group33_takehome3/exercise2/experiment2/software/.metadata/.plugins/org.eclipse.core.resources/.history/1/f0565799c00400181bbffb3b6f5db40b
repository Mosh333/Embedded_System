//													case 0x42: if(PS2_buffer_data->flag_array[33]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x4B:  if(PS2_buffer_data->flag_array[34]==1){PS2_buffer_data->buffer_flush = 1;}break;
