//													case 0x52:  if(PS2_buffer_data->flag_array[36]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x1A:  if(PS2_buffer_data->flag_array[37]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x22:  if(PS2_buffer_data->flag_array[38]==1){PS2_buffer_data->buffer_flush = 1;}break;
//
//													case 0x21: if(PS2_buffer_data->flag_array[39]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x2A:  if(PS2_buffer_data->flag_array[40]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x32:  if(PS2_buffer_data->flag_array[41]==1){PS2_buffer_data->buffer_flush = 1;}break;
