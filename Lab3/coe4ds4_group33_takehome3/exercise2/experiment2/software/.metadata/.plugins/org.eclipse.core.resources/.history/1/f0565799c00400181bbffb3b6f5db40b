//													case 0x2C:  if(PS2_buffer_data->flag_array[18]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x35:  if(PS2_buffer_data->flag_array[19]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x3C: if(PS2_buffer_data->flag_array[20]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x43:  if(PS2_buffer_data->flag_array[21]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x44:  if(PS2_buffer_data->flag_array[22]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x4D:  if(PS2_buffer_data->flag_array[23]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x54:  if(PS2_buffer_data->flag_array[24]==1){PS2_buffer_data->buffer_flush = 1;}break;
//													case 0x5B:  if(PS2_buffer_data->flag_array[25]==1){PS2_buffer_data->buffer_flush = 1;}break;
//
